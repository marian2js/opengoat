{
  "name": "@opengoat/ui",
  "version": "0.1.0",
  "description": "OpenGoat UI extension package with React/Vite frontend and Fastify server",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx src/server/index.ts",
    "build": "vite build && tsc -p tsconfig.server.json",
    "clean": "rm -rf dist .vite",
    "start": "node dist/server/index.js",
    "typecheck": "tsc -p tsconfig.server.json --noEmit && tsc -p tsconfig.client.json --noEmit"
  },
  "dependencies": {
    "@fastify/cors": "^11.0.1",
    "@fastify/middie": "^9.0.3",
    "@fastify/static": "^8.3.0",
    "@opengoat/core": "workspace:*",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "fastify": "^5.6.1",
    "lucide-react": "^0.542.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@types/node": "^22.13.4",
    "@types/react": "^19.1.11",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.2",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^7.1.5"
  },
  "engines": {
    "node": ">=20.11.0"
  }
}
