{
  "name": "@opengoat/workspace",
  "version": "0.1.0",
  "private": true,
  "description": "OpenGoat monorepo workspace",
  "type": "module",
  "packageManager": "pnpm@10.18.2",
  "scripts": {
    "build": "pnpm --filter @opengoat/core build && pnpm --filter @opengoat/cli build",
    "clean": "pnpm --filter @opengoat/core clean && pnpm --filter @opengoat/cli clean && rm -rf coverage",
    "dev": "pnpm --filter @opengoat/cli dev",
    "start": "pnpm --filter @opengoat/cli start",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:providers:live": "vitest run test/live/provider-smoke.live.test.ts",
    "typecheck": "pnpm --filter @opengoat/core typecheck && pnpm --filter @opengoat/cli typecheck",
    "desktop:dev": "pnpm --filter @opengoat/desktop start",
    "desktop:lint": "pnpm --filter @opengoat/desktop lint",
    "desktop:package": "pnpm --filter @opengoat/desktop package",
    "desktop:make": "pnpm --filter @opengoat/desktop make",
    "changeset": "changeset",
    "version-packages": "node scripts/release.mjs",
    "release": "node scripts/release.mjs"
  },
  "engines": {
    "node": ">=20.11.0"
  },
  "pnpm": {
    "overrides": {
      "@trpc/client": "10.45.4",
      "@trpc/server": "10.45.4"
    },
    "onlyBuiltDependencies": [
      "electron",
      "electron-winstaller",
      "esbuild"
    ]
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@types/node": "^22.13.4",
    "typescript": "^5.9.3",
    "vitest": "^4.0.5"
  }
}
